{
  "manifest_version": 3,

  "name": "focusLlama",
  "description": "focusLlama is a browser extension built to care for things you forget about",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "webNavigation",
    "scripting",
    "downloads"
  ],

  "host_permissions": ["<all_urls>"]
}
